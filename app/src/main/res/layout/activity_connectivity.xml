<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConnectivityActivity">

    <LinearLayout
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/storage_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Storage"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/available_storage_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17GB/55GB"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:hideAnimationBehavior="outward"
                        app:indicatorColor="@color/black"
                        app:indicatorSize="80dp"
                        app:showAnimationBehavior="inward"
                        app:trackColor="@color/light_gray"
                        app:trackCornerRadius="5dp"
                        app:trackThickness="8dp" />

                    <TextView
                        android:id="@+id/percent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="89%" />
                </FrameLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/block_folder_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbarSize="0dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"
                    tools:itemCount="5"
                    tools:listitem="@layout/adapter_folder_block" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/connected_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Google Drive is now connected"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/connect_to_google_bt"
                app:layout_constraintEnd_toEndOf="@+id/connect_to_google_bt"
                app:layout_constraintStart_toStartOf="@+id/connect_to_google_bt"
                app:layout_constraintTop_toTopOf="@+id/connect_to_google_bt" />

            <Button
                android:id="@+id/connect_to_google_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Connect to google drive first"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/progress_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/try_again_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Try Again"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
                app:layout_constraintEnd_toEndOf="@+id/connect_to_google_bt"
                app:layout_constraintStart_toStartOf="@+id/connect_to_google_bt"
                app:layout_constraintTop_toTopOf="@+id/progress_bar" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/last_sync_tv"
                app:layout_constraintEnd_toEndOf="@+id/connect_to_google_bt"
                app:layout_constraintStart_toStartOf="@+id/connect_to_google_bt"
                app:layout_constraintTop_toBottomOf="@+id/connected_tv" />
        </FrameLayout>

        <TextView
            android:id="@+id/last_sync_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Last Synced: "
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/pick_folder_bt"
            app:layout_constraintEnd_toEndOf="@+id/pick_folder_bt"
            app:layout_constraintStart_toStartOf="@+id/pick_folder_bt"
            app:layout_constraintTop_toBottomOf="@+id/connect_to_google_bt" />


        <Button
            android:id="@+id/pick_folder_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="Pick folder to sync and backup" />

        <Button
            android:id="@+id/selected_folders_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="Selected Folders"
            app:layout_constraintEnd_toEndOf="@+id/pick_folder_bt"
            app:layout_constraintStart_toStartOf="@+id/pick_folder_bt"
            app:layout_constraintTop_toBottomOf="@+id/pick_folder_bt" />


        <TextView

            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="@string/backup_time"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selected_folders_bt" />

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="@+id/tv1"
            app:layout_constraintTop_toBottomOf="@+id/tv1">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="12.00 AM" />

            <ImageButton
                android:id="@+id/edit_ibt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                app:tint="@color/black"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/drive_storage_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloud Storage"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/drive_available_storage_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/15GB"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/drive_storage_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:hideAnimationBehavior="outward"
                        app:indicatorColor="@color/black"
                        app:indicatorSize="80dp"
                        app:showAnimationBehavior="inward"
                        app:trackColor="@color/light_gray"
                        app:trackCornerRadius="5dp"
                        app:trackThickness="8dp" />

                    <TextView
                        android:id="@+id/drive_percent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="--" />
                </FrameLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
