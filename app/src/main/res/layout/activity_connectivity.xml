<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConnectivityActivity">

    <Button
        android:id="@+id/connect_to_google_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to google drive first"
        app:layout_constraintBottom_toTopOf="@+id/pick_folder_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pick_folder_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick folder to sync and backup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connect_to_google_bt" />

    <TextView
        android:id="@+id/connected_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Drive is now connected"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/connect_to_google_bt"
        app:layout_constraintEnd_toEndOf="@+id/connect_to_google_bt"
        app:layout_constraintStart_toStartOf="@+id/connect_to_google_bt"
        app:layout_constraintTop_toTopOf="@+id/connect_to_google_bt" />

    <Button
        android:id="@+id/disconnect_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        app:layout_constraintEnd_toEndOf="@+id/connect_to_google_bt"
        app:layout_constraintStart_toStartOf="@+id/connect_to_google_bt"
        app:layout_constraintTop_toBottomOf="@+id/connect_to_google_bt" />
</androidx.constraintlayout.widget.ConstraintLayout>